<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:id="@+id/chat_list_parent_layout">

	<de.hdodenhof.circleimageview.CircleImageView
			android:layout_width="70dp"
			android:layout_height="70dp"
			android:id="@+id/chat_list_avatar"
			android:src="@mipmap/ic_launcher"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Username"
			android:id="@+id/chat_list_nickname"
			android:layout_toRightOf="@id/chat_list_avatar"
			android:textSize="20sp"
			android:textColor="@android:color/background_dark"
			android:layout_marginLeft="30dp"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Last message"
			android:id="@+id/chat_list_last_message"
			android:layout_toRightOf="@id/chat_list_avatar"
			android:textSize="18sp"
			android:textColor="@android:color/darker_gray"
			android:layout_marginLeft="30dp"
			android:layout_marginTop="35dp"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Date"
			android:id="@+id/chat_list_date"
			android:textSize="18sp"
			android:layout_centerVertical="true"
			android:layout_alignParentEnd="true"
			android:textColor="@android:color/darker_gray"
			android:layout_marginLeft="30dp"/>

</RelativeLayout>