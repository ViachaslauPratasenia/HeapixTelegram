<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="80dp"
		android:layout_marginTop="10dp">


	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginStart="@dimen/activity_horizontal_margin">
		<ImageView
				android:layout_width="120dp"
				android:layout_height="wrap_content"
				android:id="@+id/chat_avatar"
				android:layout_weight="3"
				android:src="@mipmap/ic_launcher_round"
				android:clickable="true"/>
		<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginStart="@dimen/activity_horizontal_margin"
				android:layout_weight="5">
			<TextView
					android:text="Username"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/tv_chat_item_name"
					android:textColor="@android:color/background_dark"
					android:textAlignment="textStart"
					android:textSize="24sp" android:layout_weight="1"/>
			<TextView
					android:text="Last message"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" android:id="@+id/tv_chat_item_last_message"
					android:layout_weight="1" android:textSize="18sp"/>
		</LinearLayout>
		<TextView
				android:text="Date"
				android:layout_width="60dp"
				android:layout_height="match_parent" android:id="@+id/tv_chat_date" android:layout_weight="1"
		/>
	</LinearLayout>
</FrameLayout>